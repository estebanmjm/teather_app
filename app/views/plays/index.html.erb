<p id="notice"><%= notice %></p>

<h1>Listing Plays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Place</th>
      <th>Price</th>
      <th>Photo</th>
      <th>Teather</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.name %></td>
        <td><%= play.description %></td>
        <td><%= play.place %></td>
        <td><%= play.price %></td>
        <td><%= play.photo %></td>
        <td><%= play.teather_id %></td>
        <td><%= link_to 'Show', play %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
        <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

